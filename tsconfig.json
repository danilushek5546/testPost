{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2016",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "src/@types",
      "./node_modules/@types",
    ]
  },
  "ts-node": {
    "esm": true
  },
  "lib": [
    "ES2022"
  ]
}